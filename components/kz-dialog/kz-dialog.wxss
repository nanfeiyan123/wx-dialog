/* components/kz-dialog/kz-dialog.wxss */
.mask-container {
  position        : fixed;
  left            : 0;
  right           : 0;
  top             : 0;
  bottom          : 0;
  background-color: rgba(0, 0, 0, 0.3);
  overflow        : hidden;
  z-index         : 1024;
  opacity         : 0.5;
}

.animation-container {
  position: fixed;
  left    : 0;
  right   : 0;
  top     : 0;
  bottom  : 0;
  overflow: hidden;
  z-index : 1025;
}

.modal-cotainer {
  position        : fixed;
  top             : 50%;
  left            : 50%;
  transform       : translate(-50%, -50%);
  width           : 80%;
  background-color: white;
  border-radius   : 10rpx;
  z-index         : 1026;
  display         : flex;
  flex-direction  : column;
  align-items     : center;
  box-shadow      : 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.1);
  overflow        : hidden;
}

.modal-title-container {
  margin-top : 40rpx;
  font-size  : 34rpx;
  color      : #333;
  font-weight: bold;
}

.modal-content-container {
  font-size    : 28rpx;
  color        : #666;
  margin-bottom: 30rpx;
  margin-left  : 34rpx;
  margin-right : 34rpx;
}

.content-scroll {
  max-height: 600rpx;
}

.content-title {
  word-wrap  : break-word;
  word-break : break-all;
  white-space: pre-line;
}

.modal-confirm-container {
  height    : 90rpx;
  width     : 100%;
  display   : flex;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.action-item {
  flex        : 1;
  color       : #333;
  font-size   : 34rpx;
  height      : 100%;
  line-height : 90rpx;
  text-align  : center;
  border-right: 1rpx solid rgba(0, 0, 0, 0.1);
  font-weight : normal;
}

.action-item:nth-last-child(1) {
  border-right: none;
}

.actionButton {
  background-color: white;
  font-size       : 34rpx;
}

.actionButton:after {
  border-color: transparent;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}